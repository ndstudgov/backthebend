---
layout: "project-layout"
title: Project | Back the Bend
active_page: signup
stylesheet: [page, project]
---

<% page_name = current_page.data.page_name %>
<% content_for(:title, page_name) %>

<div class="body-content">
  <div class="page-text-wrapper container-fluid">
    <div class="col-sm-4 col-sm-push-8 image-col">
      <%= image_tag project.image if project.image %>
    </div>
    <div class="col-sm-8 col-sm-pull-4 project-col">
      <h2><%= project.name %></h2>
      <div class="page-accent-bar accent-left" <%= %(style="background-color: #{data.accentcolors["signup"]};") %> ></div>
      <p><em>Hosted by <%= project.organization %></em></p>
      <%= %(<p><em>Number of Volunteers Needed: #{project.numpeople}</em></p>) if project.numpeople %>
      <% project.description.each do |paragraph| %>
        <p><%= paragraph %></p>
      <% end %>
      <hr>
      <% if project.isfull %>
        <button type="button" class="btn btn-default btn-md project-btn" disabled="disabled">Project is full, thanks for your interest!</a>
      <% else %>
        <a href="https://docs.google.com/forms/d/1s1YP_9aJi_B-M4skTCDzOS5gMT5ma4SEo-4IG5wwbvM/viewform" class="btn btn-default btn-md project-btn" role="button">Sign Up Now!</a>
      <% end %>
    </div>
  </div>
</div>
